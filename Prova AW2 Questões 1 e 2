EXERCÍCIO 1
<!DOCTYPE html>
<html>

<body>
    <form name="form" action="" method="get">
        <input type="number" name="number" id="number" value="fnumber">
        <input type="submit" name="submit" value="Click here" />
    </form>
    <?php
    $number = $_GET['fnumber'];
    if ($number % 2 == 0) {
        echo "Numero Par";
    } else {
        echo "Numero Impar";
    }
    if ($number > 0) {
        echo " Numero Positivo";
    } else {
        echo "Numero Negativo";
    }

    ?>

</body>

</html>



